# Configuration de production pour la plateforme de réservation
# Les secrets sont stockés dans le dossier secrets/

NODE_ENV=production
PORT=3000

# Base de données MySQL
DB_HOST=mysql
DB_PORT=3306
DB_NAME=reservation_db
DB_USER=reservation_user
# DB_PASSWORD lu depuis secrets/mysql_password.txt
# DB_ROOT_PASSWORD lu depuis secrets/mysql_root_password.txt

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD lu depuis secrets/redis_password.txt

# JWT
# JWT_SECRET lu depuis secrets/jwt_secret.txt
JWT_EXPIRES_IN=24h

# Application
API_VERSION=v1
LOG_LEVEL=info
CORS_ORIGIN=https://votre-domain.com
MAX_REQUESTS_PER_WINDOW=1000
RATE_LIMIT_WINDOW_MS=900000

# Email (si applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=noreply@votre-domain.com

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Sessions
SESSION_NAME=reservation_session
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Timezone
TZ=Africa/Lome