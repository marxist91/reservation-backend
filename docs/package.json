{
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "npx serve docs/ -p 8080",
    "docs:clean": "rm -rf docs/",
    "docs:all": "npm run docs:clean && npm run docs:generate && npm run docs:serve",
    
    "postman:import": "echo 'Importez le fichier docs/api-collection.postman.json dans Postman'",
    "api:test": "newman run docs/api-collection.postman.json -e environments/development.json",
    
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    
    "analyze": "node scripts/analyze-api.js",
    "validate": "node scripts/validate-structure.js"
  },
  
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "newman": "^6.0.0",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "js-yaml": "^4.1.0",
    "serve": "^14.2.0"
  }
}