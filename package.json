{
  "name": "reservation-backend",
  "version": "1.0.0",
  "description": "API backend pour plateforme de r√©servation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test":  "jest --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "middleware/**/*.js",
      "routes/**/*.js",
      "models/**/*.js",
      "!**/node_modules/**",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 25,
        "branches": 20,
        "functions": 25,
        "lines": 25
      },
      "./routes/": {
        "statements": 15,
        "branches": 10,
        "functions": 15,
        "lines": 15
      }
    },
    "testTimeout": 30000,
    "forceExit": false,
    "detectOpenHandles": true,
    "maxWorkers": 1,
    "verbose": true,
    "runInBand": true
  },
  "keywords": ["reservation", "booking", "api", "nodejs"],
  "author": "Votre nom",
  "license": "MIT"
}