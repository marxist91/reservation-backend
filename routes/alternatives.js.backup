const express = require("express");
const router = express.Router();
const { ProposedAlternative, Reservation, Room, User, Notification } = require("../models");
const authMiddleware = require("../middlewares/authMiddleware");
const verifyRole = require("../middlewares/verifyRole");
const { Op } = require("sequelize");
const sequelize = require("../config/database");

// üìã GET /alternatives/pending - R√©cup√©rer les propositions en attente pour l'utilisateur connect√©
router.get("/pending", authMiddleware, async (req, res) => {
  try {
    const userId = req.user.id;

    const alternatives = await ProposedAlternative.findAll({
      where: { status: 'pending' },
      include: [
        {
          model: Reservation,
          as: 'originalReservation',
          where: { user_id: userId },
          include: [
            { model: Room, as: 'salle', attributes: ['id', 'nom'] }
          ]
        },
        {
          model: Room,
          as: 'proposedRoom',
          attributes: ['id', 'nom', 'capacite', 'equipements', 'image_url']
        },
        {
          model: User,
          as: 'proposer',
          attributes: ['id', 'nom', 'prenom']
        }
      ],
      order: [['proposed_at', 'DESC']]
    });

    return res.json({ data: alternatives });
  } catch (error) {
    console.error('‚ùå Erreur r√©cup√©ration alternatives:', error);
    return res.status(500).json({
      error: 'Erreur serveur',
      message: error.message
    });
  }
});

// ‚úÖ POST /alternatives/:id/accept - Accepter une proposition alternative
router.post("/:id/accept", authMiddleware, async (req, res) => {
  const transaction = await sequelize.transaction();
  
  try {
    const alternativeId = req.params.id;
    const userId = req.user.id;

    // R√©cup√©rer la proposition avec v√©rification
    const alternative = await ProposedAlternative.findOne({
      where: { id: alternativeId, status: 'pending' },
      include: [
        {
          model: Reservation,
          as: 'originalReservation',
          where: { user_id: userId } // V√©rifier que c'est bien sa r√©servation
        }
      ]
    });

    if (!alternative) {
      await transaction.rollback();
      return res.status(404).json({ error: 'Proposition non trouv√©e ou d√©j√† trait√©e' });
    }

    // Cr√©er la nouvelle r√©servation avec la salle alternative
    const newReservation = await Reservation.create({
      user_id: userId,
      room_id: alternative.proposed_room_id,
      date_debut: alternative.proposed_date_debut,
      date_fin: alternative.proposed_date_fin,
      statut: 'validee', // Auto-valid√©e car propos√©e par admin
      motif: alternative.originalReservation.motif,
      nombre_participants: alternative.originalReservation.nombre_participants,
      validee_par: alternative.proposed_by,
      validee_le: new Date()
    }, { transaction });

    // Mettre √† jour le statut de la proposition
    await alternative.update({
      status: 'accepted',
      responded_at: new Date()
    }, { transaction });

    // Notification pour l'admin
    await Notification.create({
      user_id: alternative.proposed_by,
      type: 'alternative_accepted',
      titre: 'Proposition alternative accept√©e',
      message: `L'utilisateur ${req.user.prenom} ${req.user.nom} a accept√© votre proposition de salle alternative.`,
      lien: `/admin/reservations`,
      lue: false
    }, { transaction });

    // Notification pour l'utilisateur
    await Notification.create({
      user_id: userId,
      type: 'reservation_validated',
      titre: 'Nouvelle r√©servation cr√©√©e',
      message: `Votre r√©servation alternative a √©t√© cr√©√©e et valid√©e automatiquement.`,
      lien: `/reservations`,
      lue: false
    }, { transaction });

    await transaction.commit();

    return res.json({
      success: true,
      message: 'Proposition accept√©e et nouvelle r√©servation cr√©√©e',
      reservation: newReservation
    });
  } catch (error) {
    await transaction.rollback();
    console.error('‚ùå Erreur acceptation alternative:', error);
    return res.status(500).json({
      error: 'Erreur serveur',
      message: error.message
    });
  }
});

// ‚ùå POST /alternatives/:id/reject - Refuser une proposition alternative
router.post("/:id/reject", authMiddleware, async (req, res) => {
  const transaction = await sequelize.transaction();
  
  try {
    const alternativeId = req.params.id;
    const userId = req.user.id;

    // R√©cup√©rer la proposition avec v√©rification
    const alternative = await ProposedAlternative.findOne({
      where: { id: alternativeId, status: 'pending' },
      include: [
        {
          model: Reservation,
          as: 'originalReservation',
          where: { user_id: userId }
        }
      ]
    });

    if (!alternative) {
      await transaction.rollback();
      return res.status(404).json({ error: 'Proposition non trouv√©e ou d√©j√† trait√©e' });
    }

    // Mettre √† jour le statut de la proposition
    await alternative.update({
      status: 'rejected',
      responded_at: new Date()
    }, { transaction });

    // Notification pour l'admin
    await Notification.create({
      user_id: alternative.proposed_by,
      type: 'alternative_rejected',
      titre: 'Proposition alternative refus√©e',
      message: `L'utilisateur ${req.user.prenom} ${req.user.nom} a refus√© votre proposition de salle alternative.`,
      lien: `/admin/reservations`,
      lue: false
    }, { transaction });

    await transaction.commit();

    return res.json({
      success: true,
      message: 'Proposition refus√©e'
    });
  } catch (error) {
    await transaction.rollback();
    console.error('‚ùå Erreur refus alternative:', error);
    return res.status(500).json({
      error: 'Erreur serveur',
      message: error.message
    });
  }
});

module.exports = router;
