# Configuration de l'environnement
NODE_ENV=development

# Configuration du serveur
PORT=3000
API_BASE_URL=http://localhost:3000

# Configuration de la base de données - Développement
DB_HOST=localhost
DB_PORT=3306
DB_NAME=reservation_salles
DB_USERNAME=root
DB_PASSWORD=Reservation2025!

# Configuration de la base de données - Test
DB_TEST_HOST=localhost
DB_TEST_PORT=3306
DB_TEST_NAME=reservation_salles_test
DB_TEST_USERNAME=root
DB_TEST_PASSWORD=Reservation2025!

# Configuration SSL pour la base de données (production)
DB_SSL=false

# Configuration JWT
JWT_SECRET=votre_secret_jwt_super_securise_ici_123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuration email (pour les notifications)
# Pour Gmail: Utiliser un "mot de passe d'application"
# 1. Activer la validation en 2 étapes sur votre compte Google
# 2. Aller dans "Sécurité" > "Mots de passe des applications"
# 3. Générer un mot de passe pour "Autre (nom personnalisé)"
# 4. Utiliser ce mot de passe dans EMAIL_PASSWORD
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=votre.email@gmail.com
EMAIL_PASSWORD=votre_mot_de_passe_application
EMAIL_FROM=noreply@reservation-pal.com
EMAIL_FROM_NAME=Port Autonome de Lomé - Réservations

# Pour d'autres fournisseurs:
# - Office 365: smtp.office365.com (port 587)
# - Outlook: smtp-mail.outlook.com (port 587)
# - Yahoo: smtp.mail.yahoo.com (port 587)
# - Serveur local: localhost (port 25 ou 1025 avec MailHog)

# Configuration des logs
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des sessions
SESSION_SECRET=votre_secret_session_super_securise
SESSION_MAX_AGE=86400000

# Configuration des uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuration Redis (si utilisé pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuration des notifications
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
SMS_API_KEY=
SMS_API_SECRET=

# Configuration de l'audit
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info

# Timezone
TZ=Europe/Paris

# Configuration CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Mode debug
DEBUG_MODE=false
VERBOSE_LOGGING=false